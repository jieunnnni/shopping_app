<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_01_Shopping_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="toolbarStyle">@style/Widget.ShoppingApp.Toolbar</item>
        <item name="toolbarWithArrowButtonStyle">@style/Widget.ShoppingApp.Toolbar.WithArrow</item>
        <item name="toolbarWithCloseButtonStyle">@style/Widget.ShoppingApp.Toolbar.WithClose</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.DayNight.NoActionBar"/>
</resources>